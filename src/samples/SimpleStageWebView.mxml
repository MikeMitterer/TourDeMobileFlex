<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Script>

    import spark.components.View;
	import spark.events.ViewNavigatorEvent;
		
    protected var swv:StageWebView;

    private function resizeSWV():void
    {
      if (swv != null)
      {
        swv.viewPort = new Rectangle(0, stage.height - height, width, height);
      }
    }
  </fx:Script>
	
	<s:creationComplete>
		swv = new StageWebView();					
    resizeSWV();
		swv.stage = stage;
		swv.loadURL("http://www.google.com");
		
		parent.addEventListener(ViewNavigatorEvent.REMOVING, function(event:FlexEvent):void {
			swv.dispose();
		});
	</s:creationComplete>

  <s:resize>
    resizeSWV();
  </s:resize>
	
</s:Group>